# Doxyfile.in

# Project related settings
PROJECT_NAME           = @PROJECT_NAME@
PROJECT_NUMBER         = @PROJECT_VERSION@
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs
OUTPUT_LANGUAGE        = English

# Source code settings
INPUT                  = "@CMAKE_SOURCE_DIR@/src" "@CMAKE_SOURCE_DIR@/include"
FILE_PATTERNS          = *.cpp *.h
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */test/*

# Build settings
GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_MAN           = NO
GENERATE_RTF           = NO
GENERATE_XML           = NO

# HTML settings
HTML_OUTPUT            = html
HTML_DYNAMIC_SECTIONS  = YES

# Extraction settings
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
EXTRACT_LOCAL_METHODS  = NO
HIDE_UNDOC_MEMBERS     = YES
HIDE_UNDOC_CLASSES     = YES

# Index settings
GENERATE_INDEX         = YES
FULL_PATH_NAMES        = NO
SHORT_NAMES            = YES

# Additional settings
QUIET                  = NO
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_NO_PARAMDOC       = YES
INPUT_ENCODING         = UTF-8
EXCLUDE_SYMBOLS        = EXCLUDE_THIS_SYMBOL
EXCLUDE_SYMBOLS        += EXCLUDE_ANOTHER_SYMBOL

# Example of enabling source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES

# Example of enabling call graphs
CALL_GRAPH             = YES
CALLER_GRAPH           = YES

GENERATE_TREEVIEW      = YES # required!
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_EXTRA_STYLESHEET = ../docs/doxygen-awesome-css/doxygen-awesome.css \
                        ../docs/doxygen-awesome-css/doxygen-awesome-sidebar-only.css
HTML_COLORSTYLE        = LIGHT # required with Doxygen >= 1.9.5
